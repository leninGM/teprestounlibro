<section id="index-books" class="jumbotron text-center">
  <div class="container">
    <% if params[:user_id].present? %>
      <h1 class="jumbotron-heading">Thank you for sharing your books!</h1>
    <% else %>
      <h1 class="jumbotron-heading">There <%= @books.count > 1 ? "are" : "is" %> <%= "#{pluralize(@books.count, "book")}" %> waiting for you!</h1>
    <% end %>
  </div>
</section>

<div class="container">
  <%= link_to 'Add a new book', new_book_path if params[:user_id].present? && params[:user_id] == current_user.id.to_s %>

  <%= render 'book', collection: @books %>
</div>
